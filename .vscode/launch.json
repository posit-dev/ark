    "version": "0.2.0",
    "configurations": [

        {
            "name": "Attach: ark",
            "type": "lldb",
            "request": "attach",
            "osx": {
                "program": "ark"
            },
            "windows": {
                "program": "ark.exe"
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Unit tests: ark",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--package=ark"
                ],
                "filter": {
                    "name": "ark",
                    "kind": "lib"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Integration tests: Data Explorer",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--package=ark"
                ],
                "filter": {
                    "name": "data_explorer",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Integration tests: Amalthea",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--package=amalthea"
                ],
                "filter": {
                    "name": "client",
                    "kind": "test"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}
